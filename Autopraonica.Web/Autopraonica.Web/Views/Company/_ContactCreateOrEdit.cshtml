﻿@model Autopraonica.Model.CompanyContact


<div class="form-horizontal single-contact-wrapper">
    @Html.HiddenFor(p => p.ID)
    <div class="form-group">
        @Html.LabelFor(p => p.Value, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(p => p.Value, Model.Value, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.ContactType, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(p => p.ContactType, new { @class = "form-control" })
        </div>
    </div>
    @Html.HiddenFor(p => p.CompanyID)
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</div>

