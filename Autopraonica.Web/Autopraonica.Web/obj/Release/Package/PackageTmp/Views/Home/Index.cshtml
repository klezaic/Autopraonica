@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1 style="text-align:center;">Autopraonica</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Pregled svih poslovnica</h2>
        <p>
           Pregledajte sve poslovnice autopraonice na jednom mjestu, dodajte nove zapise, nove gradove ili uredite postojeće podatke
        </p>
        <p class="btn btn-default">@Html.ActionLink("Pregledaj poslovnice", "Index", "Company")</p>
    </div>
    <div class="col-md-6">
        <h2>Napravite novu rezervaciju</h2>
        <p>Napravite novu rezervaciju, prijavite novog klijenta, ili samo pregledajte i uredite postojeće podatke</p>
